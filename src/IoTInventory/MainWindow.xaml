<Window
  x:Class="IoTInventory.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="IoT Device Inventory"
  Height="600"
  Width="900"
  WindowStartupLocation="CenterScreen"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Title Bar -->
    <Border Grid.Row="0" Background="#2C3E50" Padding="15">
      <TextBlock
        Text="IoT Device Inventory System"
        FontSize="24"
        FontWeight="Bold"
        Foreground="White"
      />
    </Border>

    <!-- Main Content Area -->
    <TabControl Grid.Row="1" Margin="10">
      <!-- Devices Tab -->
      <TabItem Header="Devices">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!-- TODO: Add toolbar with buttons for Add Device, Refresh, etc. -->
          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="Add Device" Width="100" Height="30" Margin="5" />
            <Button Content="Refresh" Width="100" Height="30" Margin="5" />
          </StackPanel>

          <!-- TODO: Replace this placeholder with a proper DataGrid -->
          <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <TextBlock
              Text="Device list will appear here"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              FontSize="16"
              Foreground="Gray"
            />
          </Border>
        </Grid>
      </TabItem>

      <!-- Phones Tab -->
      <TabItem Header="Phones">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <!-- TODO: Add toolbar with buttons for Add Phone, Check Out, etc. -->
          <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="Add Phone" Width="100" Height="30" Margin="5" />
            <Button Content="Check Out" Width="100" Height="30" Margin="5" />
          </StackPanel>

          <!-- TODO: Replace this placeholder with a proper DataGrid -->
          <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <TextBlock
              Text="Phone list will appear here"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              FontSize="16"
              Foreground="Gray"
            />
          </Border>
        </Grid>
      </TabItem>

      <!-- Checkouts Tab -->
      <TabItem Header="Active Checkouts">
        <Grid>
          <!-- TODO: Display currently checked out items with associated phones/devices -->
          <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <TextBlock
              Text="Active checkouts will appear here"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              FontSize="16"
              Foreground="Gray"
            />
          </Border>
        </Grid>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
